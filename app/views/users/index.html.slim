.col-md-12
  .content-box-header
    .panel-title User Details
  .content-box-large.box-with-header
    = link_to 'New User', new_user_path, class: 'btn btn-primary'
    table.table
      thead
        tr
          th Name
          th Role
          th Join Date
          th Leave Date
          th Update
      tbody
        - @users.each do |user|
          tr
            td= user.name
            td= t_option_str('user.role', user.role)
            td= user.join_date
            td= user.leave_date
            td= link_to 'edit', edit_user_path(user)
